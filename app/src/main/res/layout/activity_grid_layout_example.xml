<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.toughcoder.widget.GridLayoutExampleActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#88323232"
            android:columnCount="4">
            <TextView android:layout_column="0"
                android:layout_row="0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#8a323232"
                android:padding="10dip"
                android:text="1"/>
            <TextView android:layout_column="1"
                android:layout_row="0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#8a323232"
                android:padding="10dip"
                android:text="2"/>
            <TextView android:layout_column="2"
                android:layout_row="0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#8a323232"
                android:padding="10dip"
                android:text="3"/>
            <TextView android:layout_column="0"
                android:layout_row="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#8a323232"
                android:padding="10dip"
                android:text="3"/>
            <TextView android:layout_column="1"
                android:layout_row="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#8a323232"
                android:padding="10dip"
                android:text="4"/>
            <TextView android:layout_column="2"
                android:layout_row="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#8a323232"
                android:padding="10dip"
                android:text="5"/>
            <TextView android:layout_column="0"
                android:layout_row="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#8a323232"
                android:padding="10dip"
                android:text="6"/>
            <TextView android:layout_column="1"
                android:layout_row="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#8a323232"
                android:padding="10dip"
                android:text="7"/>
            <TextView android:layout_column="2"
                android:layout_row="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#8a323232"
                android:padding="10dip"
                android:text="8"/>
            <TextView android:layout_column="0"
                android:layout_row="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#8a323232"
                android:padding="10dip"
                android:text="9"/>
            <TextView android:layout_column="1"
                android:layout_row="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#8a323232"
                android:padding="10dip"
                android:text="0"/>
            <TextView android:layout_column="2"
                android:layout_row="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#8a323232"
                android:padding="10dip"
                android:text="."/>
            <TextView android:layout_column="0"
                android:layout_row="4"
                android:layout_columnSpan="2"
                android:gravity="fill_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#8a323232"
                android:padding="10dip"
                android:text="Clear"/>
            <TextView android:layout_column="2"
                android:layout_row="4"
                android:layout_columnSpan="2"
                android:gravity="fill_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#8a323232"
                android:padding="10dip"
                android:text="="/>
            <TextView android:layout_column="3"
                android:layout_row="0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#8a323232"
                android:padding="10dip"
                android:text="+"/>
            <TextView android:layout_column="3"
                android:layout_row="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#8a323232"
                android:padding="10dip"
                android:text="-"/>
            <TextView android:layout_column="3"
                android:layout_row="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#8a323232"
                android:padding="10dip"
                android:text="*"/>
            <TextView android:layout_column="3"
                android:layout_row="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#8a323232"
                android:padding="10dip"
                android:text="/"/>
        </GridLayout>
    </LinearLayout>
</RelativeLayout>
