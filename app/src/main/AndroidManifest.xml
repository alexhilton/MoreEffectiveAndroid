<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="net.toughcoder.effectiveandroid">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21"/>

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="net.toughcoder.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="net.toughcoder.miscellaneous.ScrollLinearLayoutActivity"
            android:label="@string/title_activity_scroll_linear_layout"/>
        <activity
            android:name="net.toughcoder.miscellaneous.FragmentTestActivity"
            android:label="Fragement test"/>
        <activity
            android:name="net.toughcoder.miscellaneous.DrawableLabelActivity"
            android:label="@string/title_activity_drawable_label"/>
        <activity
            android:name="net.toughcoder.opengl.opengl2s.OpenGLExampleActivity"
            android:label="@string/title_activity_open_glexample"/>
        <activity
            android:name="net.toughcoder.opengl.opengl1s.StarActivity"
            android:label="Star Activity"/>
        <activity
            android:name="net.toughcoder.miscellaneous.ShareWeixinActivity"
            android:label="Share Weixin"
            android:theme="@android:style/Theme.Holo"/>
        <activity
            android:name="net.toughcoder.opengl.starcamera.StarCameraActivity"
            android:label="Star Camera"
            android:theme="@android:style/Theme.Holo"/>
        <activity
            android:name="net.toughcoder.widget.RecyclerViewExampleActivity"
            android:exported="true"
            android:label="RecyclerView Example"
            android:theme="@android:style/Theme.Holo">
            <intent-filter>
                <action android:name="recyclerviewexample"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
            android:name="net.toughcoder.miscellaneous.KeyboardAwareActivity"
            android:label="Keyboard aware example"
            android:theme="@android:style/Theme.Holo"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name="net.toughcoder.widget.GridLayoutExampleActivity"
            android:label="@string/title_activity_grid_layout_example"
            android:theme="@android:style/Theme.Holo"/>
        <activity
            android:name="net.toughcoder.camera.CameraPreviewActivity"
            android:label="@string/title_activity_camera_preview"
            android:theme="@android:style/Theme.Translucent"/>
        <activity
            android:name="net.toughcoder.camera.TextureViewActivity"
            android:label="@string/title_activity_camera_preview"
            android:theme="@android:style/Theme.Translucent"/>
        <activity
            android:name="net.toughcoder.widget.SurfaceExampleActivity"
            android:label="@string/title_activity_surface_example"/>
        <activity
            android:name="net.toughcoder.widget.AlphaOpenGLActivity"
            android:label="@string/title_activity_alpha_open_gl"/>
        <activity
            android:name="net.toughcoder.rs.BitmapBlurTestActivity"
            android:label="@string/title_activity_bitmap_blur_test"/>
        <activity
            android:name="net.toughcoder.rs.RSYUV2RGBAActivity"
            android:label="@string/title_activity_rsyuv2_rgba"/>
        <activity
            android:name="net.toughcoder.rs.ImagePressActivity"
            android:label="@string/title_activity_image_press"/>
        <activity
            android:name="net.toughcoder.rs.GrayScalifyImageActivity"
            android:label="Julia RenderScript">
        </activity>
        <activity android:name="net.toughcoder.camera.CameraExampleListActivity">
        </activity>
        <activity android:name="net.toughcoder.camera.OpenGLPreviewActivity">
        </activity>
        <activity android:name="net.toughcoder.rs.RSExampleListActivity">
        </activity>
        <activity android:name="net.toughcoder.opengl.OpenGLESExampleListActivity">
        </activity>
        <activity android:name="net.toughcoder.animation.AnimationExampleListActivity">
        </activity>
        <activity android:name="net.toughcoder.animation.AnimationAnatomyActivity">
        </activity>
        <activity android:name="net.toughcoder.miscellaneous.FragmentStateLossActivity">
        </activity>
        <activity android:name="net.toughcoder.camera.SimpleCameraActivity">
        </activity>
        <activity android:name="net.toughcoder.libraries.LibraryExampleList">
        </activity>
        <activity
            android:name="net.toughcoder.libraries.retrofit2.RetrofitExampleActivity"
            android:theme="@android:style/Theme.Holo">
        </activity>
        <activity android:name="net.toughcoder.camera.CameraColorEffectActivity"
            android:theme="@android:style/Theme.Holo"/>
        <activity android:name="net.toughcoder.opengl.sharedcontext.SharedEGLContextActivity">
        </activity>
    </application>

</manifest>
