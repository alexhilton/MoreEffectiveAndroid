<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.toughcoder.effectiveandroid">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ScrollLinearLayoutActivity"
            android:label="@string/title_activity_scroll_linear_layout" />
        <activity
            android:name=".FragmentTestActivity"
            android:label="Fragement test" />
        <activity
            android:name=".DrawableLabelActivity"
            android:label="@string/title_activity_drawable_label" />
        <activity
            android:name="net.toughcoder.opengl2s.OpenGLExampleActivity"
            android:label="@string/title_activity_open_glexample" />
        <activity
            android:name="net.toughcoder.opengl1s.StarActivity"
            android:label="Star Activity" />
        <activity
            android:name=".ShareWeixinActivity"
            android:label="Share Weixin"
            android:theme="@android:style/Theme.Holo" />
        <activity
            android:name="net.toughcoder.starcamera.StarCameraActivity"
            android:label="Star Camera"
            android:theme="@android:style/Theme.Holo" />
        <activity
            android:name="net.toughcoder.widget.RecyclerViewExampleActivity"
            android:label="RecyclerView Example"
            android:theme="@android:style/Theme.Holo" />
        <activity
            android:name=".KeyboardAwareActivity"
            android:label="Keyboard aware example"
            android:theme="@android:style/Theme.Holo"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="net.toughcoder.widget.GridLayoutExampleActivity"
            android:label="@string/title_activity_grid_layout_example"
            android:theme="@android:style/Theme.Holo" />
        <activity
            android:name=".CameraPreviewActivity"
            android:label="@string/title_activity_camera_preview"
            android:theme="@android:style/Theme.Translucent"></activity>
        <activity
            android:name="net.toughcoder.widget.TextureViewActivity"
            android:label="@string/title_activity_camera_preview"
            android:theme="@android:style/Theme.Translucent"></activity>
    </application>

</manifest>
